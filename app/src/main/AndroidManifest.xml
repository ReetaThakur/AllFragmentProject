<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reeta.fragmentproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FragmentProject">
        <activity
            android:name=".viewPager.ViewPagerLaungingActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.REETA"/>
                <data android:mimeType="plain/text"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".transferData.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".transferData.TransferDataActivity"
            android:exported="false" />
        <activity
            android:name=".commitAllowStateMethod.CommitActivity"
            android:exported="false" />
        <activity
            android:name=".backStackFragment.BackStackActivity"
            android:exported="false" />
        <activity
            android:name=".staticFragment.StaticActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>